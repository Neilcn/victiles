  const calculator = document.getElementById('flooring-calculator');
  const pricePerSqm = parseFloat(calculator.dataset.price);
  const coefficient = parseFloat(calculator.dataset.coefficient);

  const input = document.getElementById('quantity-input');
  const toggle = document.getElementById('unit-toggle');
  const conversionText = document.getElementById('conversion-text');
  const totalPrice = document.getElementById('total-price');
  const wastageToggle = document.getElementById('wastage-toggle');
