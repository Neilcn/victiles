function attachRowEvents(row) {
  row.querySelectorAll('input').forEach(input => {
    input.addEventListener('input', updateTotalArea);
  });
  row.querySelector('.remove-area').addEventListener('click', () => {
    row.remove();
    updateTotalArea();
  });
}

// Attach to existing row
document.querySelectorAll('.area-row').forEach(attachRowEvents);

// Update area
function updateTotalArea() {
  let total = 0;

  document.querySelectorAll('.area-row').forEach(row => {
    const width = parseFloat(row.querySelector('.width').value) || 0;
    const length = parseFloat(row.querySelector('.length').value) || 0;

    const area = width * length;
    row.querySelector('.result').innerText = `${area.toFixed(2)} mÂ²`;
    total += area;
  });

  if (document.getElementById('tile-wastage').checked) {
    total *= 1.1;
  }

  document.getElementById('total-area').innerText = total.toFixed(2);
}


