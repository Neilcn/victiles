  const unitSuffix = document.getElementById('unit-suffix');
  const addToCartBtn = document.getElementById('custom-add-to-cart');
  const addsampleBtn = document.getElementById('add-sample');
  const variantId = document.querySelector('input[name="id"]').value;

  let convertedBoxes = 0;
  let enteredSqm = 0;
  let finalTotal = 0;
  let pricePerBox = 0;

  function calculate() {
    const rawInput = parseFloat(input.value) || 0;
    enteredSqm = rawInput;
    let totalSqm = rawInput;

    // Unit toggle mode
    if (toggle.checked) {
      // Box Mode
      convertedBoxes = Math.ceil(rawInput);
      // if (wastageToggle.checked) {
      //   convertedBoxes = Math.ceil(convertedBoxes * 1.1);
      // }
      totalSqm = convertedBoxes * coefficient;
      finalTotal = convertedBoxes * pricePerSqm;
      pricePerBox = finalTotal / convertedBoxes;

      unitLabel.textContent = 'boxes';
      unitSuffix.textContent = 'boxes';
      conversionText.innerHTML = `Equals to <span id="conversion-value">${totalSqm.toFixed(2)}</span> mÂ²`;
    } else {
      // mÂ² Mode
      convertedBoxes = Math.ceil(rawInput / coefficient);
      if (wastageToggle.checked) {
        convertedBoxes = Math.ceil(convertedBoxes * 1.1);
      }
      totalSqm = convertedBoxes * coefficient;
      finalTotal = convertedBoxes * pricePerSqm;
      pricePerBox = finalTotal / convertedBoxes;

      unitLabel.textContent = 'mÂ²';
      unitSuffix.textContent = 'mÂ²';
      conversionText.innerHTML = `Equals to <span id="conversion-value">${convertedBoxes}</span> boxes (${totalSqm.toFixed(2)} mÂ²)`;
    }

    totalPrice.textContent = finalTotal.toFixed(2);
  }

  input.addEventListener('input', calculate);
  toggle.addEventListener('change', calculate);
  wastageToggle.addEventListener('change', calculate);
  calculate(); // Initial run

  

  addToCartBtn.addEventListener('click', function () {
  console.log('--- Add to Cart clicked ---');

  // Force a recalculation to get the latest values
  calculate();
  console.log('Calculation complete');

  if (!coefficient || coefficient === 0) {
    alert("Coefficient not set for this product category.");
    console.warn("Coefficient is missing or 0");
    return;
