  console.log('Input (enteredSqm):', enteredSqm);
  console.log('Toggle (Boxes or mÂ²):', toggle.checked ? "Boxes" : "mÂ²");
  console.log('Wastage applied:', wastageToggle.checked);
  console.log('Converted Boxes:', convertedBoxes);
  console.log('Total Sqm:', enteredSqm);
  console.log('Final Total Price:', finalTotal.toFixed(2));
  console.log('Price Per Box:', pricePerBox.toFixed(2));

  const properties = {
    "Number of boxes": convertedBoxes,
