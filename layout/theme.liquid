<script>
document.addEventListener('DOMContentLoaded', function () {
  const input = document.getElementById('quantity-input');
  const toggle = document.getElementById('unit-toggle');
  const wastageToggle = document.getElementById('wastage-toggle');

  function handleRounding() {
    if (toggle.checked) {
      const val = parseFloat(input.value);
      if (!isNaN(val)) {
        const rounded = Math.ceil(val);
        if (val !== rounded) {
          input.value = rounded;
          input.dispatchEvent(new Event('input'));
        }
      }
    }
  }

  input.addEventListener('input', handleRounding);
  toggle.addEventListener('change', handleRounding);
  wastageToggle.addEventListener('change', handleRounding);
});
</script>

