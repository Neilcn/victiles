<a href="{{ url }}" class="suggest-item">
  {%- if product.featured_media != blank -%}
    <figure class="wt-cart__item__thumb suggest-item__thumb">
      <img
        src="{{ featured_media | image_url: width: 150 }}"
        alt="{{ featured_media.alt | escape }}"
        loading="lazy"
      >
    </figure>
  {%- endif -%}
  <div class="wt-cart__item__body suggest-item__body">
    <div class="wt-cart__item__data">
      {%- if settings.show_product_vendor -%}
        <div class="wt-cart__item__vendor">{{ product.vendor }}</div>
      {% endif %}
      <h3 class="wt-cart__item__name">{{ name }}</h3>

      {%- if settings.show_product_price -%}
  {%- assign coefficient = product.metafields.custom.coefficient | times: 1.0 -%}
  {%- assign unit_label = product.metafields.custom.unit_labels.value -%}
  {%- assign clean_unit = unit_label | remove: '/' -%}
  {%- assign price_raw = product.price | money_without_currency | replace: ',', '' | times: 1.0 -%}

  <div class="wt-cart__item__price predictive_price_per_m2">
    {%- if coefficient > 0 -%}
      {%- assign price_per_m2 = price_raw | divided_by: coefficient | round: 2 -%}
      ${{ price_per_m2 }} /{{ clean_unit }}
    {%- else -%}
      {{ product.price | money }}
      <span class="product-unit">
        {%- if clean_unit != blank and clean_unit != 'm2' and clean_unit != 'mÂ²' -%}
          /{{ clean_unit }}
        {%- endif -%}
      </span>
    {%- endif -%}
  </div>
{%- endif -%}


      {% if rating %}
        {% assign rating_percent = rating.rating | times: 100.0 | divided_by: 5.0 %}
        {% render 'rating-stars', percent: rating_percent %}
      {% endif %}
    </div>
  </div>
</a>
