<script>
// ===== ADD SAMPLE PRODUCT WITH LIMITS =====
document.querySelector('#add-sample')?.addEventListener('click', function() {
  const mainTitle = "{{ product.title | escape }}"; // current product title
  const mainProductUrl = "{{ product.url }}";
  const mainProductImage = "{{ product.featured_image | img_url: 'small' }}";

  const MAX_SAMPLE_PER_PRODUCT = 1;  //  Limit 1 per main product
  const MAX_SAMPLE_TOTAL = 5;        //  Limit 5 total samples in cart

  // Step 1: Check cart contents
  fetch('/cart.js')
    .then(response => response.json())
    .then(cart => {
      let existingSampleQtyForProduct = 0;
      let totalSampleQty = 0;

      cart.items.forEach(item => {
        if (item.properties && item.properties["Sample of "]) {
          totalSampleQty += item.quantity;

          if (item.properties["Sample of "] === mainTitle) {
            existingSampleQtyForProduct += item.quantity;
          }
        }
      });

      // Check 1 per product rule
      if (existingSampleQtyForProduct >= MAX_SAMPLE_PER_PRODUCT) {
        alert("You already have a sample for this product in your cart.");
        throw new Error("Per-product sample limit reached");
      }

      // Check total 5 samples rule
      if (totalSampleQty >= MAX_SAMPLE_TOTAL) {
        alert("You already have the maximum of " + MAX_SAMPLE_TOTAL + " samples in your cart.");
        throw new Error("Total sample limit reached");
      }

      // Step 2: Fetch the 'Sample' product
      return fetch('/products/Sample.js');
    })
    .then(response => response.json())
    .then(product => {
      const sampleVariantId = product.variants[0].id;

      // Step 3: Add the sample to the cart
      return fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          items: [
            {
              id: sampleVariantId,
              quantity: 1,
              properties: {
                "Sample of ": mainTitle,
                "Main Product URL": mainProductUrl,
                "Main Product Image": mainProductImage
              }
            }
          ]
        })
      });
    })
    .then(() => {
      // Step 4: Show cart drawer or fallback popup
      if (window.Shopify && Shopify.theme && Shopify.theme.sections) {
        const drawerToggle = document.querySelector(
          '[data-drawer-trigger], button[data-action="open-drawer"], button[aria-controls="CartDrawer"]'
        );
        if (drawerToggle) {
          drawerToggle.click(); // open drawer
        } else {
          showMiniCart();
        }
      } else {
        showMiniCart();
      }
    })
    .catch(error => {
      if (!error.message.includes("limit")) console.error(error);
    });
});

// ====== Mini-cart popup (fallback if theme has no drawer) ======
function showMiniCart() {
  fetch('/cart.js')
    .then(response => response.json())
    .then(cart => {
      const miniCart = document.getElementById('mini-cart');
      const itemsContainer = document.getElementById('mini-cart-items');
      itemsContainer.innerHTML = '';

      cart.items.forEach(item => {
        const imageSrc = item.properties && item.properties["Main Product Image"]
          ? item.properties["Main Product Image"]
          : item.image;

        itemsContainer.innerHTML += `
          <div style="margin-bottom:10px; display:flex; align-items:center; gap:10px;">
            <img src="${imageSrc}" style="width:50px; height:50px; object-fit:cover; border-radius:4px;">
            <div>
              <div style="font-size:12px; font-weight:bold; color:blue;">${item.properties["Sample of "] || ''}</div>
              <div>Qty: ${item.quantity}</div>
            </div>
          </div>
        `;
      });

      miniCart.style.display = 'block';
      setTimeout(() => { miniCart.style.display = 'none'; }, 4000);
    });
}

// ===== DISABLE SAMPLE QUANTITY FIELD (cart drawer + cart page) =====
function disableSampleQuantityFields() {
  const qtyInputs = document.querySelectorAll('input[name="updates[]"], input[data-quantity-input]');
  qtyInputs.forEach(function(input) {
    const lineItem = input.closest('[data-cart-item], .cart-item, .cart-drawer__item');
    const properties = lineItem?.textContent || '';
    if (properties.includes('Sample of')) {
      input.value = 1;
      input.setAttribute('readonly', true);
      input.style.pointerEvents = 'none';
      input.style.opacity = '0.5';
    }
  });
}
document.addEventListener("DOMContentLoaded", disableSampleQuantityFields);
